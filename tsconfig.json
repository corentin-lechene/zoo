{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES5", "ES6"],
    "target": "ES6",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}